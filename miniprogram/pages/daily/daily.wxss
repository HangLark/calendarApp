/* pages/daily/daily.wxss */
page{
  background-color:#F0F0F0;
}

.personalInfo{
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding:20rpx 20rpx 20rpx 20rpx;
  background-color: white;
  border-radius: 30rpx;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}


.card{
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 350rpx;
  border-width: 1rpx;
  border-style: solid;
  border-radius: 30rpx;
  border-color: white;
  
}



.cardTitle{
  font-size: x-large;
  margin-top: 30rpx;
  margin-left: 30rpx;
}


.countDown{
  font-size: 200%;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-top: 50rpx;
}

.dateAndTime{
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-top: 60rpx;
}

.newDaily{
  font-size: x-large;
  width: 100rpx;
  height: 100rpx;
  flex-direction: row;
  text-align: center;
  border-radius: 100rpx;
