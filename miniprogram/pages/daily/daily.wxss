}

.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 100rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

.avatar{
  overflow:hidden;  
