<!--pages/userCenter/userCenter.wxml-->
<view class="info bg-white margin-left margin-right margin-top shadow-warp" style="display: flex;align-items: center;">
  <view class="flex padding-sm justify-start">
    <view class="cu-avatar lg round margin-left" style="background-image:url({{userInfo.avatarUrl}});"></view>
    <view class="margin-left" style="display: flex;flex-direction: column;">
      <view class="text-black text-xxl">
        <text class="text-bold">{{userInfo.nickName}}</text>
      </view>
      <view>
      {{userInfo.country+"  "+userInfo.province}}
      </view>
    </view>
  </view>
</view>

<view class="list cu-list menu sm-border card-menu  shadow-warp">
    <view class="cu-item arrow" bindtap="historyDaily">
      <view class="content">
        <text class="cuIcon-circle text-blue"></text>
        <text class="text-grey">历史日程</text>
      </view>
    </view>
    <!-- <view class="cu-item arrow" bindtap="subscribeManage">
      <view class="content">
        <text class="cuIcon-discover text-olive"></text>
        <text class="text-grey">订阅管理</text>
      </view>
    </view> -->
    <view class="cu-item arrow" bindtap="suggestions">
      <view class="content">
        <text class="cuIcon-punch text-orange"></text>
        <text class="text-grey">我要吐槽</text>
      </view>
    </view>
    <view class="cu-item arrow" bindtap="settings">
      <view class="content">
        <text class="cuIcon-settings text-pink"></text>
        <text class="text-grey">设置</text>
      </view>
    </view>
    <view class="cu-item arrow" bindtap="connectUs">
      <view class="content">
        <text class="cuIcon-phone text-purple"></text>
        <text class="text-grey">联系我们</text>
      </view>
    </view>
    <view class="cu-item arrow" bindtap="help">
      <view class="content">
        <text class="cuIcon-question text-black"></text>
        <text class="text-grey">使用帮助</text>
      </view>
    </view>
    <view class="cu-item">
      <view class="content">
        <text class="cuIcon-favor text-green"></text>
        <text class="text-grey">当前版本</text>
      </view>
      <view class="action text-gray">
      v1.0.1
      </view>
    </view>
</view>